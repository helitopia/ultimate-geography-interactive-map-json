{
  "type": "object",
  "required": [
    "regions",
    "height",
    "width"
  ],
  "additionalProperties": false,
  "properties": {
    "commonTerritories": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "regions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/region"
      }
    },
    "height": {
      "type": "number",
      "minimum": 1
    },
    "width": {
      "type": "number",
      "minimum": 1
    }
  },
  "$defs": {
    "region": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "regionName",
        "area"
      ],
      "properties": {
        "regionName": {
          "type": "string"
        },
        "area": {
          "type": "string"
        },
        "disputedRegions": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/disputedRegion"
          },
          "minItems": 1
        }
      }
    },
    "disputedRegion": {
      "type": "object",
      "required": [
        "controlType",
        "area"
      ],
      "additionalProperties": false,
      "properties": {
        "controlType": {
          "type": "string",
          "enum": [
            "CONTROLLED",
            "CLAIMED"
          ]
        },
        "area": {
          "type": "object",
          "required": [
            "referenceType",
            "id"
          ],
          "additionalProperties": false,
          "properties": {
            "referenceType": {
              "type": "string",
              "enum": [
                "regionReference",
                "territoryReference"
              ]
            },
            "id": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}